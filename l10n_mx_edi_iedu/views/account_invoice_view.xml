<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_account_invoice_form_inherit">
      <field name="name">account.invoice.form.inherit</field>
      <field name="model">account.invoice</field>
      <field name="inherit_id" ref="account.invoice_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='name']" position="after">
            <field name="l10n_mx_edi_iedu_id"/>
        </xpath>
      </field>
    </record>

    <record model="ir.ui.view" id="view_invoice_line_form_inherit">
      <field name="name">account.invoice.line.form.inherit</field>
      <field name="model">account.invoice.line</field>
      <field name="inherit_id" ref="account.view_invoice_line_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='product_id']" position="after">
            <field name="l10n_mx_edi_iedu_id"/>
        </xpath>
      </field>
    </record>
</odoo>
