<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- stock.picking form View-->
    <record id="view_picking_form_inherited_impoty" model="ir.ui.view" >
        <field name="name">stock.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_toggle_is_locked']" position="after">
                <button name="action_assign_serial" type="object" string="Assign Series"  attrs="{'invisible': [('state', 'not in', ('assigned', 'confirmed'))]}" groups="stock.group_stock_user"/>
            </xpath>
            <xpath expr="//page/field[@name='move_ids_without_package']" position="attributes">
                <attribute name="context">{'picking_type_code': picking_type_code, 'default_picking_id': id, 'form_view_ref':'stock.view_move_picking_form', 'address_in_id': partner_id, 'default_picking_type_id': picking_type_id, 'default_location_id': location_id, 'default_location_dest_id': location_dest_id, 'flag_wizard': True}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
