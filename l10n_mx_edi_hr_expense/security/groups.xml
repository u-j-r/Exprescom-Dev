<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_category_expenses_mx" model="ir.module.category">
        <field name="name">Expenses</field>
    </record>
    <record id="force_expense" model="res.groups">
        <field name="name">Allow to force approval on expenses</field>
        <field name="category_id" ref="res_category_expenses_mx"/>
    </record>
    <record id="reclassify_journal_entries_expense" model="res.groups">
        <field name="name">Allow to reclassify journal entries on expenses</field>
        <field name="category_id" ref="res_category_expenses_mx"/>
    </record>
    <record id="allow_to_accrue_expenses" model="res.groups">
        <field name="name">Allow to Accrue Expenses</field>
        <field name="category_id" ref="res_category_expenses_mx"/>
    </record>
    <record id="allow_to_see_employee_payments" model="res.groups">
        <field name="name">Allow to see Employee Payments</field>
        <field name="category_id" ref="res_category_expenses_mx"/>
    </record>
    <record id="allow_to_revert_expenses" model="res.groups">
        <field name="name">Allow to Revert Expenses</field>
        <field name="category_id" ref="res_category_expenses_mx"/>
    </record>
    <record id="allow_to_generate_expenses_2b_checked" model="res.groups">
        <field name="name">Allow to Generate Expenses to be Checked</field>
        <field name="category_id" ref="res_category_expenses_mx"/>
    </record>
    <record id="allow_to_approve_exp_wo_being_responsible" model="res.groups">
        <field name="name">Allow to approve expenses without being responsible</field>
        <field name="category_id" ref="res_category_expenses_mx"/>
        <field name="comment">This group allows an employee to approve expenses, even when is not the manager of a department or responsible for some employee.</field>
    </record>
</odoo>
